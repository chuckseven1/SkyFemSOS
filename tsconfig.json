{
  "compilerOptions": {
    "strict": true,
    "moduleResolution": "node",
    "module": "CommonJS",
    "esModuleInterop": false,
    "lib": ["ES2019", "dom"],
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "rootDir": "src",
    "outDir": "lib",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "stripInternal": true
  },
  "exclude": ["lib"]
}
